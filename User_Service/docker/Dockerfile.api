FROM node:18-alpine

WORKDIR /usr/src/app

# Copiar package.json e package-lock.json primeiro
COPY package*.json ./

# Instalar dependências
RUN npm install

# Copiar o código fonte
COPY src/ ./src/

# Verificar a estrutura do projeto
RUN ls -la && \
    ls -la src/ && \
    echo "Project structure verified"

# Expor a porta
EXPOSE 3002

# Comando para iniciar o serviço com mais informações de debug
CMD ["node", "--trace-warnings", "src/app.js"] 